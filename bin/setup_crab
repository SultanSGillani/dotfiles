#!/usr/bin/env bash
set -e

ip link set eth21 netns port21
ip link set eth23 netns port23
ip netns exec port21 ip link set lo up
ip netns exec port23 ip link set lo up
ip netns exec port21 ip addr add 192.168.64.230/24 broadcast 192.168.64.255 dev eth21
ip netns exec port23 ip addr add 192.168.64.250/24 broadcast 192.168.64.255 dev eth23
ip netns exec port21 ip link set eth21 up
ip netns exec port23 ip link set eth23 up