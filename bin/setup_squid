#!/usr/bin/env bash
set -e

ip link set eth2 netns port0
ip link set eth3 netns port1
ip netns exec port0 ip link set lo up
ip netns exec port1 ip link set lo up
ip netns exec port0 ip addr add 192.168.64.2/24 broadcast 192.168.64.255 dev eth2
ip netns exec port1 ip addr add 192.168.64.3/24 broadcast 192.168.64.255 dev eth3
ip netns exec port0 ip link set eth2 up
ip netns exec port1 ip link set eth3 up
