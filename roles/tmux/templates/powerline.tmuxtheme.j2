# No Right side of status bar
set -g status-right-style "none"
set -g status-right-length 60
set -g status-right ""

# Current window status
set -g window-status-current-style bg=$base00,fg=$base07

# Window with activity status
set -g window-status-activity-style bg=$base00,fg=$base07

# Window separator
set -g window-status-separator ""

# Window status alignment
set -g status-justify left

# Pane border
set -g pane-border-style bg=default,fg=colour238

# Active pane border
set -g pane-active-border-style bg=default,fg=$base0E

# Pane number indicator
set -g display-panes-colour colour233
set -g display-panes-active-colour colour245

# Clock mode
set -g clock-mode-colour $base0E
set -g clock-mode-style 24

# Message
set -g message-style bg=$base0E,fg=black

# Command message
set -g message-command-style bg=colour233,fg=black

# Mode
set -g mode-style bg=$base00,fg=$base07

# prefix highlight color
set -g @prefix_highlight_fg "$base06"
set -g @prefix_highlight_bg "$base0D"

